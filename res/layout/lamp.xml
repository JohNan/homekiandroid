<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:gravity="center_horizontal"
	android:layout_width="fill_parent" android:id="@+id/LinearLayout2"
	android:orientation="vertical" >
	<TextView android:textAppearance="?android:attr/textAppearanceLarge"
		android:id="@+id/lamp_devicename" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Device Name"
		android:layout_gravity="center_horizontal" android:gravity="center_horizontal"></TextView>
	<TextView android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/lamp_devicedesc" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Some Device Description"
		android:layout_gravity="center_horizontal" android:gravity="center_horizontal"></TextView>
	<Button android:text="Button" android:background="@drawable/lamp"
		android:id="@+id/lamp_switch" android:layout_width="fill_parent"
		android:layout_height="200dp" android:layout_weight="1"></Button>
</LinearLayout>
