<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1" >

    <ImageView
        android:id="@+id/device_list_thermometer_details_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="@dimen/padding_small"
        android:src="@drawable/ic_action_search" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_small"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/device_list_thermometer_name"
            style="@style/ListItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name" />

        <TextView
            android:id="@+id/device_list_thermometer_description"
            style="@style/ListItemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desc" />
    </LinearLayout>

    <TextView
        android:id="@+id/device_list_thermometer_temperature"
        style="@style/ListItemValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_small"
        android:text="20.0 Â°C" />

</LinearLayout>